# Database Configuration
# For local PostgreSQL (manual installation):
# DATABASE_URL=postgresql://username:password@localhost:5432/multi_platform_integration?sslmode=disable
# 
# For Docker Compose (recommended for local development):
DATABASE_URL=postgresql://piscoc1_user:piscoc1_password@localhost:5432/multi_platform_integration?sslmode=disable
#
# For Neon.tech (cloud PostgreSQL):
# DATABASE_URL=postgresql://username:password@ep-example.neon.tech/database_name?sslmode=require
#
# Note: Remove ?sslmode=require for local development, keep it for production/Neon

# Discord Integration
# Get these from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here

# Airtable Integration  
# Get these from: https://airtable.com/create/tokens
AIRTABLE_API_KEY=your_airtable_api_key_here
AIRTABLE_BASE_ID=your_airtable_base_id_here

# Instagram Integration (via Facebook)
# Get these from: https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_ACCOUNT_ID=your_instagram_account_id_here

# ImgBB Integration (Image hosting)
# Get this from: https://api.imgbb.com/
IMGBB_API_KEY=your_imgbb_api_key_here

# Session Secret (REQUIRED - generate a secure random string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your_secure_random_session_secret_here_32_characters_minimum

# Frontend variables (prefixed with VITE_)
VITE_FACEBOOK_APP_ID=${FACEBOOK_APP_ID}

# Base URL for your application
BASE_URL=http://localhost:3000

# Port (optional - app will auto-select if not specified)
# PORT=3000

# Instagram Webhook Verification Token (optional, for webhooks)
INSTAGRAM_VERIFY_TOKEN=your_webhook_verify_token_here
